<Window x:Class="ToolWindow1.BMIcalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolWindow1"
        mc:Ignorable="d"
        Title="BMIcalculator" Height="250" Width="250">
    <Grid>
        <TextBox Name="NumberTextBox" PreviewTextInput="NumberValidationTextBox" Margin="87,27,61,163" TextChanged="NumberTextBox_TextChanged" />
        <TextBox Name="NumberTextBox2" PreviewTextInput="NumberValidationTextBox" Margin="87,96,60,96" TextChanged="NumberTextBox2_TextChanged"/>
        <Label Content="{Binding Path=BMInumber}" HorizontalAlignment="Left" Margin="74,168,0,0" VerticalAlignment="Top" Height="40" Width="93"/>
        <Label Content="Weight(kg):" HorizontalAlignment="Left" Margin="5,100,0,0" VerticalAlignment="Top"/>
        <Label Content="Hight(cm):" HorizontalAlignment="Left" Margin="12,37,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
